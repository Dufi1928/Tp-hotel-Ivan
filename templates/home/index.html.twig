{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Playfair+Display:ital,wght@0,700;0,800;0,900;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="{{ asset('build/home.css') }}">
    <link rel="stylesheet" href="{{ asset('build/hotel.css') }}">
    <div class="hero" style="background-image: url('https://www.rabstol.net/uploads/gallery/main/219/rabstol_net_france_12.jpg');"></div>

    <section class="section pb-0"  >
        <div class="container">
            <div class="row check-availabilty" id="next">
                <div class="block-32" data-aos="fade-up" data-aos-offset="-200">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6 mb-3 mb-lg-0 col-lg-3">
                            {{ form_label(form.checkInDate, 'Check In', {'label_attr': {'class': 'font-weight-bold text-black'}}) }}
                            <div class="input-group">
                                <div class="input-group date" data-provide="datepicker">
                                    {{ form_widget(form.checkInDate, {'attr': {'class': 'form-control', 'id': 'checkin_date'}}) }}
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-th"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3 mb-lg-0 col-lg-3">
                            {{ form_label(form.checkOutDate, 'Check Out', {'label_attr': {'class': 'font-weight-bold text-black'}}) }}
                            <div class="input-group">
                                <div class="input-group date" data-provide="datepicker">
                                    {{ form_widget(form.checkOutDate, {'attr': {'class': 'form-control', 'id': 'checkout_date'}}) }}
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-th"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3 mb-md-0 col-lg-3">
                            <div class="row">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <div class="field-icon-wrap">
                                        {{ form_label(form.city, 'City', {'label_attr': {'class': 'font-weight-bold text-black'}}) }}
                                        <div class="field-icon-wrap">
                                            {{ form_widget(form.city, {'attr': {'class': 'form-control', 'id': 'city'}}) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3 mb-md-0">
                                    {{ form_label(form.beds, 'Beds', {'label_attr': {'class': 'font-weight-bold text-black'}}) }}
                                    <div class="field-icon-wrap">
                                        <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                        {{ form_widget(form.beds, {'attr': {'class': 'form-control', 'id': 'children'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-3 align-self-end">
                            {{ form_widget(form.search, {'attr': {'class': 'btn btn-primary btn-block text-white btn-check'}}) }}
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
    <section class="py-5 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-12 col-lg-7 ml-auto order-lg-2 position-relative mb-5" data-aos="fade-up">
                    <figure class="img-absolute">
                        <img src="{{ asset('uploads/img/food-1.jpg')  }}" alt="Image" class="img-fluid">
                    </figure>
                    <img src="{{ asset('uploads/img/slider-3.jpg')}}" alt="Image" class="img-fluid rounded">
                </div>
                <div class="col-md-12 col-lg-4 order-lg-1" data-aos="fade-up">
                    <h2 class="heading">Welcome!</h2>
                    <p class="mb-4 txt">Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. Separated they live in Bookmarksgrove right at the coast of the Semantics, a large language ocean.</p>
                    <p><a href="#" class="btn btn-primary text-white py-2 mr-3">Learn More</a> </p>
                </div>
            </div>
        </div>
    </section>

    <section class="section">
        <div class="container">
            <div class="row justify-content-center text-center mb-5">
                <div class="col-md-7">
                    <h2 class="heading aos-init aos-animate" data-aos="fade-up">Ours hotels</h2>
                    <p data-aos="fade-up" data-aos-delay="100" class="aos-init aos-animate">Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. Separated they live in Bookmarksgrove right at the coast of the Semantics, a large language ocean.</p>
                </div>
            </div>
            <div class="row">
                {% for hotel in hotels %}
                        <div class="col-md-6 col-lg-4 aos-init aos-animate" data-aos="fade-up">
                            <a href="{{ path('app_hotel', { 'hotelId': hotel.id }) }}" class="room">
                                <figure class="img-wrap " >
                                    <div class="hotel-img">
                                        <img src="{{ asset('uploads/img/hotels/' ~ hotel.coverImgName) }}" alt="Free website template" class="img-fluid mb-3">
                                    </div>
                                </figure>
                                <div class="p-3 text-center room-info">
                                    <h2 class="smallTitle">{{ hotel.name  }}</h2>
                                    <span class="text-uppercase letter-spacing-1">{{ hotel.city }}</span>
                                </div>
                            </a>
                        </div>
                {% endfor %}
            </div>
        </div>
        <div class="container d-flex justify-content-center mb-5">
            {{ knp_pagination_render(hotels) }}
        </div>
    </section>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize the datepicker for the start date
            $('#checkin_date').datepicker({
                format: 'dd/mm/yyyy', // Use the same format as in the form class
                onSelect: function(dateText) {
                    // Synchronize the input field value with the selected date
                    $(this).val(dateText);
                }
            });

            // Initialize the datepicker for the end date
            $('#checkout_date').datepicker({
                format: 'dd/mm/yyyy', // Use the same format as in the form class
                onSelect: function(dateText) {
                    // Synchronize the input field value with the selected date
                    $(this).val(dateText);
                }
            });
        });
    </script>
{% endblock %}
