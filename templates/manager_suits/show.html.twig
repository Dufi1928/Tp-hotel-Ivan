{% extends 'base.html.twig' %}

{% block title %}Suite{% endblock %}

{% block body %}
    <h1>Suite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ suite.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ suite.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ suite.description }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ suite.imageName }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ suite.price }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ suite.updatedAt ? suite.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Beds</th>
                <td>{{ suite.beds }}</td>
            </tr>
            <tr>
                <th>Bathroom</th>
                <td>{{ suite.bathroom }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ suite.size }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_manager_suits_index') }}">back to list</a>

    <a href="{{ path('app_manager_suits_edit', {'id': suite.id}) }}">edit</a>

    {{ include('manager_suits/_delete_form.html.twig') }}
{% endblock %}
